<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.express.mapper.ExpressMessageNoticeMapper">
    
    <resultMap type="ExpressMessageNotice" id="ExpressMessageNoticeResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="orderNo"    column="order_no"    />
        <result property="noticeType"    column="notice_type"    />
        <result property="noticeContent"    column="notice_content"    />
        <result property="noticeChannel"    column="notice_channel"    />
        <result property="sendTime"    column="send_time"    />
        <result property="readFlag"    column="read_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectExpressMessageNoticeVo">
        select id, user_id, order_no, notice_type, notice_content, notice_channel, send_time, read_flag, create_by, create_time, update_by, update_time, del_flag from express_message_notice
    </sql>

    <select id="selectExpressMessageNoticeList" parameterType="ExpressMessageNotice" resultMap="ExpressMessageNoticeResult">
        <include refid="selectExpressMessageNoticeVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="orderNo != null  and orderNo != ''"> and order_no = #{orderNo}</if>
            <if test="noticeType != null  and noticeType != ''"> and notice_type = #{noticeType}</if>
            <if test="noticeContent != null  and noticeContent != ''"> and notice_content = #{noticeContent}</if>
            <if test="noticeChannel != null  and noticeChannel != ''"> and notice_channel = #{noticeChannel}</if>
            <if test="sendTime != null "> and send_time = #{sendTime}</if>
            <if test="readFlag != null  and readFlag != ''"> and read_flag = #{readFlag}</if>
        </where>
    </select>
    
    <select id="selectExpressMessageNoticeById" parameterType="Long" resultMap="ExpressMessageNoticeResult">
        <include refid="selectExpressMessageNoticeVo"/>
        where id = #{id}
    </select>

    <insert id="insertExpressMessageNotice" parameterType="ExpressMessageNotice" useGeneratedKeys="true" keyProperty="id">
        insert into express_message_notice
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="orderNo != null">order_no,</if>
            <if test="noticeType != null and noticeType != ''">notice_type,</if>
            <if test="noticeContent != null and noticeContent != ''">notice_content,</if>
            <if test="noticeChannel != null and noticeChannel != ''">notice_channel,</if>
            <if test="sendTime != null">send_time,</if>
            <if test="readFlag != null and readFlag != ''">read_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="delFlag != null">del_flag,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="orderNo != null">#{orderNo},</if>
            <if test="noticeType != null and noticeType != ''">#{noticeType},</if>
            <if test="noticeContent != null and noticeContent != ''">#{noticeContent},</if>
            <if test="noticeChannel != null and noticeChannel != ''">#{noticeChannel},</if>
            <if test="sendTime != null">#{sendTime},</if>
            <if test="readFlag != null and readFlag != ''">#{readFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="delFlag != null">#{delFlag},</if>
         </trim>
    </insert>

    <update id="updateExpressMessageNotice" parameterType="ExpressMessageNotice">
        update express_message_notice
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="orderNo != null">order_no = #{orderNo},</if>
            <if test="noticeType != null and noticeType != ''">notice_type = #{noticeType},</if>
            <if test="noticeContent != null and noticeContent != ''">notice_content = #{noticeContent},</if>
            <if test="noticeChannel != null and noticeChannel != ''">notice_channel = #{noticeChannel},</if>
            <if test="sendTime != null">send_time = #{sendTime},</if>
            <if test="readFlag != null and readFlag != ''">read_flag = #{readFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteExpressMessageNoticeById" parameterType="Long">
        delete from express_message_notice where id = #{id}
    </delete>

    <delete id="deleteExpressMessageNoticeByIds" parameterType="String">
        delete from express_message_notice where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>