<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.express.mapper.ExpressOrderMapper">

    <resultMap type="ExpressOrder" id="ExpressOrderResult">
        <result property="orderId"    column="order_id"    />
        <result property="orderNo"    column="order_no"    />
        <result property="payType"    column="pay_type"    />
        <result property="payChannel"    column="pay_channel"    />
        <result property="orderStatus"    column="order_status"    />
        <result property="refundStatus"    column="refund_status"    />
        <result property="goodsInfo"    column="goods_info"    />
        <result property="consignee"    column="consignee"    />
        <result property="consigneePhone"    column="consignee_phone"    />
        <result property="consigneeAddress"    column="consignee_address"    />
        <result property="userRemark"    column="user_remark"    />
        <result property="merchantRemark"    column="merchant_remark"    />
        <result property="orderAmount"    column="order_amount"    />
        <result property="payTime"    column="pay_time"    />
        <result property="refundTime"    column="refund_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectExpressOrderVo">
        select order_id, order_no, pay_type, pay_channel, order_status, refund_status, goods_info, consignee, consignee_phone, consignee_address, user_remark, merchant_remark, order_amount, pay_time, refund_time, create_by, create_time, update_by, update_time, del_flag from express_order
    </sql>

    <select id="selectExpressOrderList" parameterType="ExpressOrder" resultMap="ExpressOrderResult">
        <include refid="selectExpressOrderVo"/>
        <where>
            <if test="orderNo != null  and orderNo != ''"> and order_no like concat('%', #{orderNo}, '%')</if>
            <if test="payType != null  and payType != ''"> and pay_type = #{payType}</if>
            <if test="payChannel != null  and payChannel != ''"> and pay_channel = #{payChannel}</if>
            <if test="orderStatus != null  and orderStatus != ''"> and order_status = #{orderStatus}</if>
            <if test="refundStatus != null  and refundStatus != ''"> and refund_status = #{refundStatus}</if>
        </where>
    </select>

    <select id="selectExpressOrderByOrderId" parameterType="Long" resultMap="ExpressOrderResult">
        <include refid="selectExpressOrderVo"/>
        where order_id = #{orderId}
    </select>

    <select id="selectExpressOrderByOrderNo" parameterType="String" resultMap="ExpressOrderResult">
        <include refid="selectExpressOrderVo"/>
        where order_no = #{orderNo} and del_flag = '0'
    </select>

    <insert id="insertExpressOrder" parameterType="ExpressOrder" useGeneratedKeys="true" keyProperty="orderId">
        insert into express_order
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderNo != null and orderNo != ''">order_no,</if>
            <if test="payType != null">pay_type,</if>
            <if test="payChannel != null">pay_channel,</if>
            <if test="orderStatus != null">order_status,</if>
            <if test="refundStatus != null">refund_status,</if>
            <if test="goodsInfo != null and goodsInfo != ''">goods_info,</if>
            <if test="consignee != null and consignee != ''">consignee,</if>
            <if test="consigneePhone != null and consigneePhone != ''">consignee_phone,</if>
            <if test="consigneeAddress != null and consigneeAddress != ''">consignee_address,</if>
            <if test="userRemark != null">user_remark,</if>
            <if test="merchantRemark != null">merchant_remark,</if>
            <if test="orderAmount != null">order_amount,</if>
            <if test="payTime != null">pay_time,</if>
            <if test="refundTime != null">refund_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="delFlag != null">del_flag,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderNo != null and orderNo != ''">#{orderNo},</if>
            <if test="payType != null">#{payType},</if>
            <if test="payChannel != null">#{payChannel},</if>
            <if test="orderStatus != null">#{orderStatus},</if>
            <if test="refundStatus != null">#{refundStatus},</if>
            <if test="goodsInfo != null and goodsInfo != ''">#{goodsInfo},</if>
            <if test="consignee != null and consignee != ''">#{consignee},</if>
            <if test="consigneePhone != null and consigneePhone != ''">#{consigneePhone},</if>
            <if test="consigneeAddress != null and consigneeAddress != ''">#{consigneeAddress},</if>
            <if test="userRemark != null">#{userRemark},</if>
            <if test="merchantRemark != null">#{merchantRemark},</if>
            <if test="orderAmount != null">#{orderAmount},</if>
            <if test="payTime != null">#{payTime},</if>
            <if test="refundTime != null">#{refundTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="delFlag != null">#{delFlag},</if>
         </trim>
    </insert>

    <update id="updateExpressOrder" parameterType="ExpressOrder">
        update express_order
        <trim prefix="SET" suffixOverrides=",">
            <if test="orderNo != null and orderNo != ''">order_no = #{orderNo},</if>
            <if test="payType != null">pay_type = #{payType},</if>
            <if test="payChannel != null">pay_channel = #{payChannel},</if>
            <if test="orderStatus != null">order_status = #{orderStatus},</if>
            <if test="refundStatus != null">refund_status = #{refundStatus},</if>
            <if test="goodsInfo != null and goodsInfo != ''">goods_info = #{goodsInfo},</if>
            <if test="consignee != null and consignee != ''">consignee = #{consignee},</if>
            <if test="consigneePhone != null and consigneePhone != ''">consignee_phone = #{consigneePhone},</if>
            <if test="consigneeAddress != null and consigneeAddress != ''">consignee_address = #{consigneeAddress},</if>
            <if test="userRemark != null">user_remark = #{userRemark},</if>
            <if test="merchantRemark != null">merchant_remark = #{merchantRemark},</if>
            <if test="orderAmount != null">order_amount = #{orderAmount},</if>
            <if test="payTime != null">pay_time = #{payTime},</if>
            <if test="refundTime != null">refund_time = #{refundTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where order_id = #{orderId}
    </update>

    <delete id="deleteExpressOrderByOrderId" parameterType="Long">
        delete from express_order where order_id = #{orderId}
    </delete>

    <delete id="deleteExpressOrderByOrderIds" parameterType="String">
        delete from express_order where order_id in
        <foreach item="orderId" collection="array" open="(" separator="," close=")">
            #{orderId}
        </foreach>
    </delete>

    <insert id="batchInsertExpressOrder" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="orderId">
        insert into express_order
        <trim prefix="(" suffix=")" suffixOverrides=",">
            order_no, pay_type, pay_channel, order_status, refund_status, goods_info, consignee, consignee_phone, consignee_address, user_remark, merchant_remark, order_amount, pay_time, refund_time, create_by, create_time, update_by, update_time, del_flag
        </trim>
        <foreach collection="list" item="item" separator=",">
            <trim prefix="values (" suffix=")" suffixOverrides=",">
                #{item.orderNo}, #{item.payType}, #{item.payChannel}, #{item.orderStatus}, #{item.refundStatus}, #{item.goodsInfo}, #{item.consignee}, #{item.consigneePhone}, #{item.consigneeAddress}, #{item.userRemark}, #{item.merchantRemark}, #{item.orderAmount}, #{item.payTime}, #{item.refundTime}, #{item.createBy}, #{item.createTime}, #{item.updateBy}, #{item.updateTime}, #{item.delFlag}
            </trim>
        </foreach>
    </insert>
</mapper>
