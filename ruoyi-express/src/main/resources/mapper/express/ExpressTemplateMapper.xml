<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.express.mapper.ExpressTemplateMapper">
    
    <resultMap type="ExpressTemplate" id="ExpressTemplateResult">
        <result property="templateId"    column="template_id"    />
        <result property="templateName"    column="template_name"    />
        <result property="templateCode"    column="template_code"    />
        <result property="templateSize"    column="template_size"    />
        <result property="templateStyle"    column="template_style"    />
        <result property="fieldsConfig"    column="fields_config"    />
        <result property="printConfig"    column="print_config"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectExpressTemplateVo">
        select template_id, template_name, template_code, template_size, template_style, fields_config, print_config, status, create_by, create_time, update_by, update_time, remark, del_flag from express_template
    </sql>

    <select id="selectExpressTemplateList" parameterType="ExpressTemplate" resultMap="ExpressTemplateResult">
        <include refid="selectExpressTemplateVo"/>
        <where>  
            <if test="templateName != null  and templateName != ''"> and template_name like concat('%', #{templateName}, '%')</if>
            <if test="templateCode != null  and templateCode != ''"> and template_code like concat('%', #{templateCode}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectExpressTemplateByTemplateId" parameterType="Long" resultMap="ExpressTemplateResult">
        <include refid="selectExpressTemplateVo"/>
        where template_id = #{templateId}
    </select>

    <insert id="insertExpressTemplate" parameterType="ExpressTemplate" useGeneratedKeys="true" keyProperty="templateId">
        insert into express_template
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="templateName != null and templateName != ''">template_name,</if>
            <if test="templateCode != null and templateCode != ''">template_code,</if>
            <if test="templateSize != null">template_size,</if>
            <if test="templateStyle != null">template_style,</if>
            <if test="fieldsConfig != null">fields_config,</if>
            <if test="printConfig != null">print_config,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
            <if test="delFlag != null">del_flag,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="templateName != null and templateName != ''">#{templateName},</if>
            <if test="templateCode != null and templateCode != ''">#{templateCode},</if>
            <if test="templateSize != null">#{templateSize},</if>
            <if test="templateStyle != null">#{templateStyle},</if>
            <if test="fieldsConfig != null">#{fieldsConfig},</if>
            <if test="printConfig != null">#{printConfig},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
            <if test="delFlag != null">#{delFlag},</if>
         </trim>
    </insert>

    <update id="updateExpressTemplate" parameterType="ExpressTemplate">
        update express_template
        <trim prefix="SET" suffixOverrides=",">
            <if test="templateName != null and templateName != ''">template_name = #{templateName},</if>
            <if test="templateCode != null and templateCode != ''">template_code = #{templateCode},</if>
            <if test="templateSize != null">template_size = #{templateSize},</if>
            <if test="templateStyle != null">template_style = #{templateStyle},</if>
            <if test="fieldsConfig != null">fields_config = #{fieldsConfig},</if>
            <if test="printConfig != null">print_config = #{printConfig},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where template_id = #{templateId}
    </update>

    <delete id="deleteExpressTemplateByTemplateId" parameterType="Long">
        delete from express_template where template_id = #{templateId}
    </delete>

    <delete id="deleteExpressTemplateByTemplateIds" parameterType="String">
        delete from express_template where template_id in 
        <foreach item="templateId" collection="array" open="(" separator="," close=")">
            #{templateId}
        </foreach>
    </delete>
</mapper>